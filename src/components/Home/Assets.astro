---
import Download from "../shared/Download.astro";
const list = [
	{
		fileName: "GenuineMods.zip",
		link: "/mods-folder",
		title: "Client-Side Fabric Mods 1.20.1",
	},
	{
		fileName: "GenuinePack.zip",
		link: "/resourcepack",
		title: "Combined Resourcepack",
	},
];
---

<section class='mx-auto space-y-4 w-5/6 md:w-3/4'>
	{
		list.map((item) => (
			<div class='bg-primary/10 flex items-center rounded-lg'>
				<div class='w-full'>
					<a
						class='hover:bg-primary/15 block font-medium p-4 rounded-l-lg hover:underline underline-offset-2 w-full'
						href={item.link}>
						{item.title}
					</a>
				</div>

				<div class='flex items-center px-3'>
					<button class='bg-primary/50 hover:bg-primary font-semibold p-1 md:px-3 md:py-2 rounded-md'>
						<a
							href={`${item.link}/download`}
							download={item.fileName}>
							<Download className='md:hidden h-8 w-8' />
							<span class='hidden md:inline'>Download</span>
						</a>
					</button>
				</div>
			</div>
		))
	}
</section>
